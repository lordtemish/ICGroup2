<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:layout_marginTop="10sp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/mainObjectRowLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mainFramentProgressRowTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Успеваемость"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:gravity="start|center_vertical"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                >
                <ProgressBar
                    android:id="@+id/mainFramentProgressRowProgressBar"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:layout_width="match_parent"
                    android:layout_height="15sp"
                    android:layout_gravity="center"
                    android:progress="60"

                    android:progressDrawable="@drawable/horizontal_progress_percentage"
                    android:secondaryProgress="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                >
                <TextView
                    android:id="@+id/mainFramentProgressRowPercentageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="55%"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>