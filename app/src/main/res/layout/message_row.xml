<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="55sp"
        android:layout_height="35sp"
        android:background="@drawable/ic_triangle_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="25sp"
        android:layout_marginStart="25sp"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:background="@drawable/icgreen_row_page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:paddingBottom="25sp"
        >
        <LinearLayout
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/extraLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:text=" Суханова С."
                            />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:text="13 января | 10:32"
                        />
                </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:divider="@drawable/transparent"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/footerTechnoMapFragmentFav0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_staryellow"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/footerTechnoMapFragmentFav1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_staryellow"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/footerTechnoMapFragmentFav2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_staryellow"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/footerTechnoMapFragmentFav3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stargrey"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/footerTechnoMapFragmentFav4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stargrey"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginTop="20sp"
            android:id="@+id/textTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="@string/bigtext"
            app:layout_constraintTop_toBottomOf="@+id/extraLayout"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>